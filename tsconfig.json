{
  "compilerOptions": {
    "paths": {
      "@Views/*": ["./src/Views/*"],
      "@Common/*": ["@Views/Common*"],
      "@Hooks/*": ["./src/Hooks/*"],
      "@SVG/*": ["./src/SVG/*"],
      "@Contexts/*": ["./src/contexts/*"],
      "@Utils/*": ["./src/Utils/*"],
      "@Assets/*": ["./src/assets/*"],
      "@ABIs/*": ["./src/ABIs/*"],
      "@Config/*": ["./Config/*"],
      "@ConfigContract": ["./src/Config/Contracts.ts"],
      "@TV/*": ["./src/TradingView/*"],
      "@Public/*": ["./public/*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    /* Bundler mode */
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
